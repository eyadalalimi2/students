<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Students">

        <activity
            android:name="com.eyadalalimi.students.ui.activity.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity android:name="com.eyadalalimi.students.ui.activity.auth.LoginActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.auth.RegisterActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.auth.VerifyEmailActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.auth.ForgotPasswordActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.auth.ResetPasswordActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.auth.ActivationActivity" android:exported="false" />

        <!-- Home -->
        <activity android:name="com.eyadalalimi.students.ui.activity.home.HomeActivity" android:exported="false" />

        <!-- Assets / Contents / Materials -->
        <activity android:name="com.eyadalalimi.students.ui.activity.assets.AssetsListActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.assets.AssetDetailsActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.contents.ContentsListActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.contents.ContentDetailsActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.materials.MaterialsActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.materials.MaterialDetailsActivity" android:exported="false" />

        <!-- Profile / Security / Devices -->
        <activity android:name="com.eyadalalimi.students.ui.activity.profile.ProfileActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.profile.ChangePasswordActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.profile.DevicesActivity" android:exported="false" />

        <!-- Visibility / Notifications / Viewer -->
        <activity android:name="com.eyadalalimi.students.ui.activity.visibility.VisibilityActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.notifications.NotificationsActivity" android:exported="false" />
        <activity android:name="com.eyadalalimi.students.ui.activity.webview.DocumentViewerActivity" android:exported="false" />

    </application>
</manifest>
